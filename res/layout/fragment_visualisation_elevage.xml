<ScrollView xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        tools:ignore="ExtraText">


        <TextView
            android:id="@+id/text_view_nom_elevage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Elevage "
            android:textStyle="bold"
            android:textSize="30dp"
            android:textColor="@color/black"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/text_view_attestation"
            android:textColor="@color/black"
            android:text="Attestation sanitaire"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:padding="16dp"
            android:background="@drawable/border_shape"
            android:radius="20dp"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/grey"
            android:text="Rechercher un numéro de travail :  "
            android:textSize="15dp"
            />

        <androidx.appcompat.widget.SearchView
            android:id="@+id/searchView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:queryHint="Rechercher un numéro de travail"
            android:background="@drawable/search_view_background"
            app:iconifiedByDefault="false" >
        </androidx.appcompat.widget.SearchView>

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/grey"
            android:text="Animaux présents sur l'élevage :  "
            android:textSize="15dp"/>

        <LinearLayout
            android:id="@+id/animals_container"
            style = "@style/AnimalContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:orientation="vertical">
        </LinearLayout>

    </LinearLayout>


</ScrollView>