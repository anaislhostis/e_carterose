<ScrollView xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".FormulaireNaissanceFragment">

    <!-- Titre du formulaire -->
    <TextView
        android:id="@+id/TitreFormNais"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="16dp"

        android:layout_marginTop="16dp"
        android:gravity="center_horizontal"
        android:text="Notification de naissance"
        android:textSize="24sp"
        android:textStyle="bold" />

    <!-- Numéro de travail -->
    <TextView
        android:id="@+id/textViewNumTra"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="18dp"
        android:text="Numéro de travail :"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/editTextNumTra"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/border_shape"
        android:hint="  ex : 2308"
        android:maxLength="4"
        android:minLength="4"
        android:inputType="number" />

    <!-- Nom du veau -->
    <TextView
        android:id="@+id/textViewNom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="18dp"
        android:text="Nom  :"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/editTextNom"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/border_shape"
        android:hint="  ex : URANUS"
        android:inputType="textCapCharacters" />

    <!-- Code race du veau -->
    <TextView
        android:id="@+id/textViewCodeRace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="18dp"
        android:text="Code race :"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/editTextCodeRace"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="16dp"
        android:inputType="number"
        android:hint="  ex : 38"
        android:maxLength="2"
        android:minLength="2"
        android:background="@drawable/border_shape"/>

    <!-- Sexe -->
    <TextView
        android:id="@+id/textViewSexe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="18dp"
        android:text="Sexe (1=mâle / 2=femelle) :"
        android:textSize="16sp" />

    <Spinner
        android:id="@+id/spinnerSexe"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/border_shape" />


    <!-- Date de naissance-->
    <TextView
        android:id="@+id/textViewDateNais"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="18dp"
        android:text="Date de naissance :"
        android:textSize="16sp" />

        <Button
        android:id="@+id/buttonPickDateNais"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="16dp"
        android:hint="Choisir une date"
        android:background="@drawable/border_shape"/>



    <!-- Code pays du père -->
    <TextView
        android:id="@+id/textViewCodePaysPere"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="18dp"
        android:text="Code pays du père  :"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/editTextCodePaysPere"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/border_shape"
        android:hint="  ex : FR"
        android:maxLength="2"
        android:minLength="2"
        android:inputType="textCapCharacters" />

    <!-- Numéro national du père -->
    <TextView
        android:id="@+id/textViewNumNatPere"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="18dp"
        android:text="Numéro national du père (10 chiffres) :"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/editTextNumNatPere"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="16dp"
        android:inputType="number"
        android:hint="  ex : 9924595810"
        android:maxLength="10"
        android:minLength="10"
        android:background="@drawable/border_shape"/>

    <!-- Code race du père -->
    <TextView
        android:id="@+id/textViewCodeRacePere"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="18dp"
        android:text="Code race du père :"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/editTextCodeRacePere"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/border_shape"
        android:hint="  ex : 38"
        android:maxLength="2"
        android:minLength="2"
        android:inputType="number" />

    <!-- Code pays de la mère -->
    <TextView
        android:id="@+id/textViewCodePaysMere"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="18dp"
        android:text="Code pays de la mère  :"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/editTextCodePaysMere"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/border_shape"
        android:hint="  ex : FR"
        android:maxLength="2"
        android:minLength="2"
        android:inputType="textCapCharacters" />

    <!-- Numéro national de la mère -->
    <TextView
        android:id="@+id/textViewNumNatMere"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="18dp"
        android:text="Numéro national de la mère (10 chiffres) :"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/editTextNumNatMere"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="16dp"
        android:inputType="number"
        android:hint="  ex : 9924595810"
        android:maxLength="10"
        android:minLength="10"
        android:background="@drawable/border_shape"/>

    <!-- Code race de la mère-->
    <TextView
        android:id="@+id/textViewCodeRaceMere"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="18dp"
        android:text="Code race de la mère :"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/editTextCodeRaceMere"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="16dp"
        android:inputType="number"
        android:hint="  ex : 38"
        android:maxLength="2"
        android:minLength="2"
        android:background="@drawable/border_shape"/>

    <!-- Bouton soumettre -->
    <Button
        android:id="@+id/buttonSubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="16dp"
        style = "@style/ButtonEleveur"
        android:text="Soumettre" />

    <!-- Bouton effacer -->
    <Button
        android:id="@+id/buttonEffacer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="16dp"
        style="@style/ButtonEffacerFormulaire"
        android:text="Effacer" />

</LinearLayout>
</ScrollView>
