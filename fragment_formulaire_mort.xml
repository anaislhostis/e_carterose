<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".FormulaireMortFragment">

    <!-- Titre du formulaire -->
    <TextView
        android:id="@+id/TitreFormMort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:text="Notification de mort"
        android:textSize="30sp"
        android:textStyle="bold" />

    <!-- Numéro de travail -->
    <TextView
        android:id="@+id/textViewNumTra"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="90dp"
        android:text="Numéro de travail de l'animal mort :"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/editTextNumTra"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/border_shape"
        android:hint="  ex : 2308"
        android:maxLength="4"
        android:inputType="number" />

    <!-- Layout horizontal pour les boutons Soumettre et Effacer -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <!-- Bouton soumettre -->
        <Button
            android:id="@+id/buttonSubmit"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="8dp"
            style="@style/ButtonEleveur"
            android:text="Soumettre" />

        <!-- Bouton effacer -->
        <Button
            android:id="@+id/buttonEffacer"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="16dp"
            style="@style/ButtonEffacerFormulaire"
            android:text="Effacer" />

    </LinearLayout>

    <!-- Bouton voir les animaux notifiés comme mort -->
    <Button
        android:id="@+id/buttonVoirNotifMort"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="16dp"
        android:layout_gravity="center_horizontal"
        style="@style/ButtonEleveur"
        android:text="Voir les notifications de mort" />

</LinearLayout>
