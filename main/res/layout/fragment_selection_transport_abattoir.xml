<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/TextView_elevage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/ligth_beige"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".SelectionEndroitTransfertFragment">


    <!-- Titre de la page -->
    <TextView
        android:id="@+id/TitreEndroitTransfert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:gravity="center_horizontal"
        android:text="Transférer un animal à l'abattoir"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="50dp" />


    <!-- Numéro de travail -->
    <TextView
        android:id="@+id/textViewNumTra"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="30dp"
        android:text="Entrez le numéro de travail de l'animal :"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/editTextNumTra"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/border_shape"
        android:hint="  ex : 2308"
        android:maxLength="8"
        android:inputType="number" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="70dp" />

    <!-- Comment voulez-vous transférer votre animal ? -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:text="Comment voulez-vous transférer votre animal ?"
        android:textSize="14sp" />

    <!-- CheckBox -->
    <RadioGroup
        android:id="@+id/radioGroupTransfert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <!-- Transport direct -->
        <RadioButton
            android:id="@+id/BoutonTransfertDirect"
            style="@style/ButtonEleveur"
            android:layout_width="185dp"
            android:layout_height="39dp"
            android:layout_margin="7dp"
            android:textSize="14sp"
            android:text="Transfert direct" />

        <!-- Transport indirect -->
        <RadioButton
            android:id="@+id/BoutonTransfertIndirect"
            style="@style/ButtonEleveur"
            android:layout_width="185dp"
            android:layout_height="39dp"
            android:layout_margin="7dp"
            android:textSize="14sp"
            android:text="Transfert indirect" />

    </RadioGroup>

    <Space
        android:layout_width="match_parent"
        android:layout_height="15dp" />

    <!-- *Transfert indirect -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#808080"
        android:text="*Transfert indirect = tranfert avec transporteur"
        android:textSize="12sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="40dp" />


    <!-- Layout horizontal pour les boutons Soumettre et Effacer -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <!-- Bouton soumettre -->
        <Button
            android:id="@+id/buttonSubmit"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="8dp"
            style="@style/ButtonEleveur"
            android:text="Soumettre" />

        <!-- Bouton effacer -->
        <Button
            android:id="@+id/buttonEffacer"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="16dp"
            style="@style/ButtonEffacerFormulaire"
            android:text="Effacer" />

    </LinearLayout>

</LinearLayout>